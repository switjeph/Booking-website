{
  "version": 2,
  "builds": [
    {
      "src": "booking-api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "booking-api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "Client/dist/$1"
    }
  ]
}
